{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*", "node_modules/*","trash/**/*"]
}
